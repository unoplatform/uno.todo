<Page x:Class="ToDo.Views.WelcomePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:ToDo.Views"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:uen="using:Uno.Extensions.Navigation.UI"
	  xmlns:uer="using:Uno.Extensions.Reactive.UI"
	  xmlns:utu="using:Uno.Toolkit.UI"
	  xmlns:um="using:Uno.Material"
	  mc:Ignorable="d"
	  Background="{ThemeResource MaterialBackgroundBrush}">

	<Grid>
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState x:Name="Wide">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWindowWidth}" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="NarrowWelcomeContent.Visibility"
								Value="Collapsed" />
						<Setter Target="WideWelcomeContent.Visibility"
								Value="Visible" />
					</VisualState.Setters>
				</VisualState>

				<VisualState x:Name="Narrow">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="0" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="NarrowWelcomeContent.Visibility"
								Value="Visible" />
						<Setter Target="WideWelcomeContent.Visibility"
								Value="Collapsed" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>

		<utu:AutoLayout x:Name="NarrowWelcomeContent"
						Visibility="Collapsed"
						Padding="10,10,10,10">
			<utu:AutoLayout Padding="20,60,20,60"
							Orientation="Horizontal"
							utu:AutoLayout.PrimaryAlignment="Stretch">
				<Image Source="ms-appx:///Assets/Welcome/welcome_uno.png"
					   Stretch="Uniform"
					   utu:AutoLayout.CounterAlignment="Start"
					   utu:AutoLayout.PrimaryAlignment="Stretch"
					   utu:AutoLayout.CounterLength="310" />
			</utu:AutoLayout>
			<utu:AutoLayout Spacing="20"
							Padding="0,40,0,40">
				<TextBlock Foreground="{ThemeResource MaterialOnSecondaryMediumBrush}"
						   TextAlignment="Center"
						   TextWrapping="Wrap"
						   Text="Welcome to&#xA;Uno To Do!"
						   Style="{StaticResource MaterialHeadline4}"
						   x:Uid="Body_Welcome_To_Uno_To_Do_" />
				<TextBlock Foreground="{ThemeResource MaterialPrimaryVariantLightBrush}"
						   TextAlignment="Center"
						   TextWrapping="Wrap"
						   Text="Start using the best to-do app"
						   Style="{StaticResource MaterialSubtitle2}"
						   x:Uid="Body_Start_Using_The_Best_To_Do_App" />
			</utu:AutoLayout>
			<Button Content="Get started"
					x:Uid="Welcome_Body_Button"
					Command="{Binding GetStarted}"
					Style="{StaticResource MaterialContainedButtonStyle}" />
		</utu:AutoLayout>

		<utu:AutoLayout x:Name="WideWelcomeContent"
						Visibility="Collapsed"
						Orientation="Horizontal"
						Background="{ThemeResource MaterialSurfaceBrush}">
			<utu:AutoLayout Spacing="100"
							Padding="16,16,16,16"
							PrimaryAxisAlignment="Center"
							utu:AutoLayout.PrimaryLength="450">
				<utu:AutoLayout Spacing="100"
								utu:AutoLayout.CounterAlignment="Center">
					<Image Source="ms-appx:///Assets/Welcome/uno_platform_logo.png"
						   Stretch="Uniform"
						   utu:AutoLayout.CounterAlignment="Start"
						   utu:AutoLayout.PrimaryLength="30"
						   utu:AutoLayout.CounterLength="103" />
					<utu:AutoLayout Spacing="10"
									Padding="0,0,0,40"
									utu:AutoLayout.CounterAlignment="Start"
									utu:AutoLayout.CounterLength="330">
						<TextBlock Foreground="{ThemeResource MaterialOnSecondaryMediumBrush}"
								   TextWrapping="Wrap"
								   Text="Welcome to&#xA;Uno To Do!"
								   Style="{StaticResource MaterialHeadline2}" />
						<TextBlock Foreground="{ThemeResource MaterialPrimaryVariantLightBrush}"
								   TextWrapping="Wrap"
								   Text="Start using the best to-do app, you can&#xA;create and manage your to-do lists to improve your organization."
								   Style="{StaticResource MaterialSubtitle1}" />
					</utu:AutoLayout>
					<Button Content="Get started"
							Command="{Binding GetStarted}"
							utu:AutoLayout.CounterAlignment="Start"
							utu:AutoLayout.CounterLength="330"
							Style="{StaticResource MaterialContainedButtonStyle}" />
				</utu:AutoLayout>
			</utu:AutoLayout>
			<utu:AutoLayout Padding="60,60,60,60"
							Background="{ThemeResource MaterialPrimarySelectedBrush}"
							utu:AutoLayout.PrimaryAlignment="Stretch">
				<utu:AutoLayout Padding="0,0,0,50"
								Orientation="Horizontal"
								utu:AutoLayout.PrimaryAlignment="Stretch">
					<Image Source="ms-appx:///Assets/Welcome/welcome_uno.png"
						   Stretch="Uniform"
						   utu:AutoLayout.PrimaryAlignment="Stretch" />
				</utu:AutoLayout>
			</utu:AutoLayout>
		</utu:AutoLayout>
	</Grid>
</Page>
