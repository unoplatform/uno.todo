	<utu:AutoLayout Background="{ThemeResource MaterialSurfaceBrush}">
		<utu:AutoLayout utu:AutoLayout.PrimaryAlignment="Stretch">
			<utu:NavigationBar Content="{Binding Entity.Title}"
							   Style="{StaticResource MaterialModalNavigationBarStyle}" />
			<utu:AutoLayout Spacing="10"
							Padding="0,10,0,0"
							utu:AutoLayout.PrimaryAlignment="Stretch">
				<utu:AutoLayout Spacing="10"
								Padding="12,0,12,0"
								Orientation="Horizontal">
					<utu:AutoLayout>
						<CheckBox utu:AutoLayout.CounterAlignment="Start"
								  Style="{StaticResource MaterialCheckBoxStyle}"
								  IsChecked="{Binding Entity.IsCompleted}"
								  Command="{Binding ToggleIsCompleted}"
								  CommandParameter="{Binding}" />
					</utu:AutoLayout>
					<utu:AutoLayout utu:AutoLayout.CounterAlignment="Start"
									utu:AutoLayout.PrimaryAlignment="Stretch">
						<TextBox PlaceholderText="Task Name"
								 Text="{Binding Entity.Title}"
								 Style="{StaticResource MaterialFilledTextBoxStyle}" />
					</utu:AutoLayout>
					<utu:AutoLayout>
						<ToggleButton utu:AutoLayout.CounterAlignment="Start"
									  Style="{StaticResource MaterialToggleButtonIconStyle}"
									  IsChecked="{Binding Entity.IsImportant}"
									  Command="{Binding ToggleIsImportant}"
									  CommandParameter="{Binding}">
							<ToggleButton.Content>
								<PathIcon Data="{StaticResource Icon_Star_Rate_Empty}" />
							</ToggleButton.Content>
							<um:ControlExtensions.AlternateContent>
								<PathIcon Data="{StaticResource Icon_Star_Rate}" />
							</um:ControlExtensions.AlternateContent>
						</ToggleButton>
					</utu:AutoLayout>
				</utu:AutoLayout>
				<utu:AutoLayout Spacing="12"
								Padding="20,10,20,0"
								utu:AutoLayout.PrimaryAlignment="Stretch">
					<utu:Divider Style="{StaticResource MaterialDividerStyle}" />
					<utu:AutoLayout PrimaryAxisAlignment="Center">
						<utu:AutoLayout Spacing="16"
										Orientation="Horizontal">
							<utu:AutoLayout utu:AutoLayout.CounterAlignment="Center">
								<utu:AutoLayout Spacing="16"
												Orientation="Horizontal"
												utu:AutoLayout.CounterAlignment="Start"
												utu:AutoLayout.PrimaryLength="24"
												utu:AutoLayout.CounterLength="24">
									<PathIcon Data="{StaticResource Icon_Today}"
											  Foreground="{ThemeResource MaterialPrimaryBrush}"
											  utu:AutoLayout.CounterAlignment="Start" />
								</utu:AutoLayout>
							</utu:AutoLayout>
							<utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
											utu:AutoLayout.PrimaryAlignment="Stretch">
								<utu:AutoLayout PrimaryAxisAlignment="Center">
									<utu:AutoLayout PrimaryAxisAlignment="Center">
										<TextBlock Foreground="{ThemeResource MaterialPrimaryBrush}"
												   TextWrapping="Wrap"
												   Text="Due Sun, 10 April"
												   Style="{StaticResource MaterialSubtitle1}" />
									</utu:AutoLayout>
								</utu:AutoLayout>
							</utu:AutoLayout>
							<utu:AutoLayout Orientation="Horizontal"
											utu:AutoLayout.CounterAlignment="Center">
								<utu:AutoLayout PrimaryAxisAlignment="End"
												Orientation="Horizontal">
									<Button utu:AutoLayout.CounterAlignment="Start"
											Style="{StaticResource MaterialButtonIconStyle}">
										<PathIcon Data="{StaticResource Icon_Close}" />
									</Button>
								</utu:AutoLayout>
							</utu:AutoLayout>
						</utu:AutoLayout>
					</utu:AutoLayout>
					<utu:Divider Style="{StaticResource MaterialDividerStyle}" />
					<utu:AutoLayout>
						<utu:AutoLayout Spacing="16"
										Padding="0,8,0,0"
										Orientation="Horizontal">
							<utu:AutoLayout utu:AutoLayout.CounterAlignment="Start"
											utu:AutoLayout.PrimaryAlignment="Stretch">
								<utu:AutoLayout PrimaryAxisAlignment="Center">
									<utu:AutoLayout PrimaryAxisAlignment="Center">
										<TextBlock Foreground="{ThemeResource MaterialOnSurfaceMediumBrush}"
												   TextWrapping="Wrap"
												   Text="{Binding Entity.Body.Content}"
												   Style="{StaticResource MaterialSubtitle1}" />
									</utu:AutoLayout>
								</utu:AutoLayout>
							</utu:AutoLayout>
						</utu:AutoLayout>
					</utu:AutoLayout>
					<utu:AutoLayout>
						<utu:AutoLayout Spacing="16"
										Orientation="Horizontal">
							<utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
											utu:AutoLayout.PrimaryAlignment="Stretch">
								<utu:AutoLayout PrimaryAxisAlignment="Center">
									<utu:AutoLayout PrimaryAxisAlignment="Center">
										<TextBlock Foreground="{ThemeResource MaterialOnSurfaceMediumBrush}"
												   TextWrapping="Wrap"
												   Style="{StaticResource MaterialBody2}" />
									</utu:AutoLayout>
								</utu:AutoLayout>
							</utu:AutoLayout>
							<utu:AutoLayout Orientation="Horizontal"
											utu:AutoLayout.CounterAlignment="Center">
								<utu:AutoLayout PrimaryAxisAlignment="End"
												Orientation="Horizontal">
									<Button Content="Open"
											Command="{Binding AddTaskNote}"
											utu:AutoLayout.CounterAlignment="Start"
											Style="{StaticResource MaterialTextButtonStyle}" />
								</utu:AutoLayout>
							</utu:AutoLayout>
						</utu:AutoLayout>
					</utu:AutoLayout>
					<utu:Divider Style="{StaticResource MaterialDividerStyle}" />
				</utu:AutoLayout>
				<utu:AutoLayout Padding="20,0,10,0">
					<utu:AutoLayout Spacing="16"
									Orientation="Horizontal">
						<utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
										utu:AutoLayout.PrimaryAlignment="Stretch">
							<utu:AutoLayout PrimaryAxisAlignment="Center">
								<utu:AutoLayout PrimaryAxisAlignment="Center">
									<TextBlock Foreground="{ThemeResource MaterialOnSurfaceMediumBrush}"
											   TextWrapping="Wrap"
											   Text="Completed today"
											   Style="{StaticResource MaterialBody2}" />
								</utu:AutoLayout>
							</utu:AutoLayout>
						</utu:AutoLayout>
						<utu:AutoLayout Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center">
							<utu:AutoLayout PrimaryAxisAlignment="End"
											Orientation="Horizontal">
								<Button Command="{Binding Delete}"
										utu:AutoLayout.CounterAlignment="Start"
										Style="{StaticResource MaterialButtonIconStyle}">
									<PathIcon Data="{StaticResource Icon_Delete_Outline}" />
								</Button>
							</utu:AutoLayout>
						</utu:AutoLayout>
					</utu:AutoLayout>
				</utu:AutoLayout>
			</utu:AutoLayout>
		</utu:AutoLayout>
	</utu:AutoLayout>
</UserControl>
